{
  "name": "polaris-list-table",
  "version": "1.1.1",
  "description": "A complete data table component for Shopify Polaris with filtering, sorting, pagination and URL sync. Integrates with mongoose-url-query.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "yarn build"
  },
  "keywords": [
    "polaris",
    "shopify",
    "list-table",
    "data-table",
    "index-table",
    "filtering",
    "sorting",
    "pagination",
    "mongoose-url-query",
    "react",
    "hooks"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@shopify/polaris": "^12.0.0 || ^13.0.0",
    "react": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "@shopify/polaris": {
      "optional": false
    },
    "react": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "mongoose-url-query": "^1.6.3"
  },
  "devDependencies": {
    "@shopify/polaris": "13.9.0",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/react": "18.3.12",
    "react": "18.3.1",
    "tsup": "8.3.5",
    "typescript": "5.7.2"
  }
}
